<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/rectimage"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:layout_above="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-92dp"
        android:src="@drawable/rectangle"></ImageView>

    <ImageView
        android:id="@+id/rectimage3"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText"
        android:src="@drawable/rectangle"></ImageView>

    <ImageView
        android:id="@+id/rectimage2"
        android:layout_width="313dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:src="@drawable/rectangle"></ImageView>

    <ImageView
        android:id="@+id/rectimage6"
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/rectangle"></ImageView>

    <TextView
        android:id="@+id/editText"
        android:layout_width="153dp"
        android:layout_height="97dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:ems="60"
        android:inputType="textMultiLine"
        android:lines="2"
        android:singleLine="false"
        android:text="Wall Evader"
        android:textAlignment="center"
        android:textColor="@color/colorMain"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="161dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:background="@color/colorMain"
        android:text="PLAY" />

    <Button
        android:id="@+id/btnHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@color/colorRed"
        android:text="High score" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_above="@+id/rectimage2"
        android:layout_marginBottom="-213dp"
        android:layout_toStartOf="@+id/rectimage2"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:layout_toEndOf="@+id/editText"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/btnPlay"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/star" />

</RelativeLayout>